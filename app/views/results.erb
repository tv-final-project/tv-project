<!doctype html>
<html>
  <head>
    <title>Telequest</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body style="background-color:#14b3d9">
    <div class="container">
    <div class="row">
      <h1 style="font-size:100px" align="center"> Telequest </h1>

    </div>
    <div class="row">
      <div style="font-size: 22px" class="col-xs-4">
      GooglePlay:
      <table border="1" style="white-space: nowrap; overflow: hidden; text-overflow:ellipsis;">
        <% @shows_array.each do |show| %>
          <tr>
            <td style="border-bottom-width: 2px; border-bottom-color: white"><%= show.titleize %></td>
            <td><% if @google[show] == false %>
              <img src="http://upload.wikimedia.org/wikipedia/en/thumb/b/ba/Red_x.svg/480px-Red_x.svg.png" height="2%" width="9%">
            <% else %>
              <img src="http://www.clker.com/cliparts/2/k/n/l/C/Q/transparent-green-checkmark-hi.png" height="2%" width="9%"> </td>
            <% end %>
          </tr>
        <% end %>
        </table>
      </div>
      <div style="font-size: 22px" class="col-xs-4">
      Itunes:
      <table border="1" style="white-space: nowrap; overflow: hidden; text-overflow:ellipsis;">
        <% @shows_array.each do |show| %>
          <tr>
            <td><%= show.titleize %></td>
            <td>
            <%if @itunes[show] == false %>
              <img src="http://upload.wikimedia.org/wikipedia/en/thumb/b/ba/Red_x.svg/480px-Red_x.svg.png" height="2%" width="9%">
            <% else %>
              <img src="http://www.clker.com/cliparts/2/k/n/l/C/Q/transparent-green-checkmark-hi.png" height="2%" width="9%">
            <% end %>
            </td>
          </tr>
        <% end %>
        </table>
      </div>
      <div style="font-size: 22px" class="col-xs-4">
      Netflix:
      <table border="1" style="white-space: nowrap; overflow: hidden; text-overflow:ellipsis;">
        <% @shows_array.each do |show| %>
          <tr>
            <td><%= show.titleize %></td>
            <td>
            <% if @netflix[show] == false %>
              <img src="http://upload.wikimedia.org/wikipedia/en/thumb/b/ba/Red_x.svg/480px-Red_x.svg.png" height="2%" width="9%">
            <% else %>
              <img src="http://www.clker.com/cliparts/2/k/n/l/C/Q/transparent-green-checkmark-hi.png" height="2%" width="9%">
            <% end %>
            </td>
          </tr>
        <% end %>
        </table>
      </div>
    </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>